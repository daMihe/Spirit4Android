<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:layout_width="match_parent" android:background="#666" android:text="TextView" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/newsTitle"></TextView>
    <TextView android:text="TextView" android:background="#666" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="right" android:id="@+id/newsDesc"></TextView>
    <WebView android:layout_width="match_parent" android:background="#000" android:layout_height="match_parent" android:id="@+id/newsDisp"></WebView>
    
</LinearLayout>
